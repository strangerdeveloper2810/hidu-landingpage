---
import BaseLayout from '../layouts/BaseLayout.astro';
import MenuGrid from '../components/sections/MenuGrid.astro';
import { SHOP_INFO } from '../utils/constants';

const seoConfig = {
  title: 'Thực đơn',
  description: `Khám phá thực đơn đa dạng với hơn 100 món đồ uống tại ${SHOP_INFO.name}. Từ cà phê, trà sữa, sinh tố đến nước ép tươi ngon. Giá cả hợp lý, chất lượng đảm bảo.`,
  keywords: [
    'thực đơn',
    'menu',
    'đồ uống',
    'cà phê',
    'trà sữa',
    'sinh tố',
    'nước ép',
    'giá cả',
    'bảng giá',
    SHOP_INFO.name,
    'menu đồ uống Phan Thiết',
    'thực đơn quán nước',
  ],
};
---

<BaseLayout {...seoConfig}>
  <!-- Page Header -->
  <section class="relative py-20 gradient-sunset overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-10 left-10 w-40 h-40 bg-white rounded-full blur-3xl animate-float"
      >
      </div>
      <div
        class="absolute bottom-10 right-10 w-60 h-60 bg-white rounded-full blur-3xl animate-float"
        style="animation-delay: 1.5s;"
      >
      </div>
    </div>

    <div class="container-custom relative z-10">
      <div class="text-center text-white" data-aos="fade-up">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Thực đơn</h1>
        <p class="text-xl md:text-2xl text-white text-opacity-90 max-w-3xl mx-auto">
          Hơn 100 món đồ uống đa dạng, từ truyền thống đến hiện đại, phù hợp
          với mọi khẩu vị
        </p>
      </div>
    </div>
  </section>

  <!-- Menu Content -->
  <section class="section-padding bg-beige-light">
    <MenuGrid />
  </section>

  <!-- Ordering Info -->
  <section class="section-padding bg-beige-light">
    <div class="container-custom">
      <div
        class="bg-gradient-beige rounded-3xl p-8 md:p-12 shadow-lg border-t-4 border-primary-500"
        data-aos="fade-up"
      >
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Delivery -->
          <div class="text-center">
            <div
              class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-500 flex items-center justify-center shadow-md"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-800">Giao hàng tận nơi</h3>
            <p class="text-gray-600">
              Miễn phí ship trong bán kính 3km
            </p>
          </div>

          <!-- Custom -->
          <div class="text-center">
            <div
              class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-500 flex items-center justify-center shadow-md"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-800">Tùy chỉnh đồ uống</h3>
            <p class="text-gray-600">
              Điều chỉnh độ ngọt, đá theo ý thích
            </p>
          </div>

          <!-- Takeaway -->
          <div class="text-center">
            <div
              class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-500 flex items-center justify-center shadow-md"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-800">Mang đi nhanh chóng</h3>
            <p class="text-gray-600">
              Đặt trước, đến lấy không cần chờ
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-beige-light">
    <div class="container-custom">
      <div class="text-center" data-aos="zoom-in">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-800">
          Đã chọn được món yêu thích?
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          Đặt hàng ngay để nhận ưu đãi hấp dẫn!
        </p>
        <a
          href="/contact"
          class="btn-outline text-lg px-8 py-3"
        >
          Đặt hàng ngay
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
