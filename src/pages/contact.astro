---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/sections/ContactForm.astro';
import Card from '../components/ui/Card.astro';
import { SHOP_INFO } from '../utils/constants';

const seoConfig = {
  title: 'Liên hệ',
  description: `Liên hệ với ${SHOP_INFO.name} để đặt hàng, đặt bàn hoặc giải đáp thắc mắc. Địa chỉ: ${SHOP_INFO.address}. Hotline: ${SHOP_INFO.phone}. Email: ${SHOP_INFO.email}`,
  keywords: [
    'liên hệ',
    'đặt hàng',
    'đặt bàn',
    'địa chỉ',
    'hotline',
    'địa chỉ quán',
    'bản đồ',
    SHOP_INFO.name,
    'liên hệ quán nước Phan Thiết',
    'đặt hàng online Phan Thiết',
    'hotline quán nước',
  ],
};
---

<BaseLayout {...seoConfig}>
  <!-- Page Header -->
  <section class="relative py-20 gradient-accent overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-10 left-10 w-60 h-60 bg-white rounded-full blur-3xl animate-float"
      >
      </div>
      <div
        class="absolute bottom-10 right-10 w-80 h-80 bg-white rounded-full blur-3xl animate-float"
        style="animation-delay: 1.5s;"
      >
      </div>
    </div>

    <div class="container-custom relative z-10">
      <div class="text-center text-white" data-aos="fade-up">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Liên hệ</h1>
        <p class="text-xl md:text-2xl text-white text-opacity-90 max-w-3xl mx-auto">
          Chúng tôi luôn sẵn sàng phục vụ bạn. Đặt hàng ngay hôm nay!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        <!-- Address -->
        <div data-aos="fade-up" data-aos-delay="0">
          <Card>
            <div class="p-6 text-center">
              <div
                class="w-16 h-16 mx-auto mb-4 rounded-full gradient-primary flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">Địa chỉ</h3>
              <p class="text-gray-600">{SHOP_INFO.address}</p>
            </div>
          </Card>
        </div>

        <!-- Phone -->
        <div data-aos="fade-up" data-aos-delay="100">
          <Card>
            <div class="p-6 text-center">
              <div
                class="w-16 h-16 mx-auto mb-4 rounded-full gradient-secondary flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">Hotline</h3>
              <a
                href={`tel:${SHOP_INFO.phone}`}
                class="text-gray-600 hover:text-primary-600 transition-colors"
              >
                {SHOP_INFO.phone}
              </a>
            </div>
          </Card>
        </div>

        <!-- Email -->
        <div data-aos="fade-up" data-aos-delay="200">
          <Card>
            <div class="p-6 text-center">
              <div
                class="w-16 h-16 mx-auto mb-4 rounded-full gradient-accent flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">Email</h3>
              <a
                href={`mailto:${SHOP_INFO.email}`}
                class="text-gray-600 hover:text-primary-600 transition-colors break-all"
              >
                {SHOP_INFO.email}
              </a>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Forms -->
  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="text-gradient">Đặt hàng</span>
        </h2>
        <p class="text-xl text-gray-600">
          Điền thông tin bên dưới để đặt hàng
        </p>
      </div>

      <ContactForm />
    </div>
  </section>

  <!-- Map & Social -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Map -->
        <div data-aos="fade-right">
          <h3 class="text-2xl font-bold mb-6">Bản đồ</h3>
          <div class="rounded-2xl shadow-lg overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3917.5055280383226!2d108.08556377581894!3d10.925133889232846!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3176830076892e4f%3A0xe9f974a61f607752!2sHiDu%20Coffee!5e0!3m2!1svi!2s!4v1762712251541!5m2!1svi!2s"
              width="100%"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="w-full h-96"
            ></iframe>
          </div>
        </div>

        <!-- Social -->
        <div data-aos="fade-left" class="flex flex-col justify-center">
          <h3 class="text-2xl font-bold mb-6">Kết nối với chúng tôi</h3>
          <Card>
            <div class="p-8">
              <p class="text-gray-600 mb-6 text-center">
                Theo dõi chúng tôi trên các mạng xã hội để cập nhật những món mới và ưu đãi hấp dẫn!
              </p>
              <div class="flex flex-col gap-4">
                {
                  SHOP_INFO.social.facebook && (
                    <a
                      href={SHOP_INFO.social.facebook}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center justify-center space-x-3 px-6 py-4 rounded-lg bg-primary-500 text-white hover:bg-primary-600 hover:shadow-lg transition-all group"
                    >
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
                      </svg>
                      <span class="font-semibold text-lg">Facebook</span>
                    </a>
                  )
                }

                {
                  SHOP_INFO.social.instagram && (
                    <a
                      href={SHOP_INFO.social.instagram}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center justify-center space-x-3 px-6 py-4 rounded-lg bg-gradient-to-r from-pink-500 to-orange-500 text-white hover:shadow-lg transition-all group"
                    >
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                      </svg>
                      <span class="font-semibold text-lg">Instagram</span>
                    </a>
                  )
                }

                {
                  SHOP_INFO.social.zalo && (
                    <a
                      href={SHOP_INFO.social.zalo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center justify-center space-x-3 px-6 py-4 rounded-lg bg-blue-500 text-white hover:bg-blue-600 hover:shadow-lg transition-all group"
                    >
                      <span class="font-bold text-2xl">Z</span>
                      <span class="font-semibold text-lg">Zalo</span>
                    </a>
                  )
                }
              </div>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
