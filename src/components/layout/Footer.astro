---
import { SHOP_INFO, NAV_ITEMS } from '../../utils/constants';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white relative z-20">
  <div class="container-custom">
    <!-- Main Footer Content -->
    <div class="py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-xl font-bold mb-4">
          <span class="text-gradient">{SHOP_INFO.name}</span>
        </h3>
        <p class="text-gray-400 mb-4">
          {SHOP_INFO.description}
        </p>
        <div class="flex space-x-4">
          {
            SHOP_INFO.social.facebook && (
              <a
                href={SHOP_INFO.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full gradient-primary flex items-center justify-center hover:scale-110 transition-transform"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
                </svg>
              </a>
            )
          }
          {
            SHOP_INFO.social.instagram && (
              <a
                href={SHOP_INFO.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full gradient-secondary flex items-center justify-center hover:scale-110 transition-transform"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              </a>
            )
          }
          {
            SHOP_INFO.social.zalo && (
              <a
                href={SHOP_INFO.social.zalo}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full gradient-accent flex items-center justify-center hover:scale-110 transition-transform"
                aria-label="Zalo"
              >
                <span class="text-sm font-bold">Z</span>
              </a>
            )
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Liên kết nhanh</h4>
        <ul class="space-y-2">
          {
            NAV_ITEMS.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-400 hover:text-white transition-colors"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Liên hệ</h4>
        <ul class="space-y-3 text-gray-400">
          <li class="flex items-start">
            <svg
              class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{SHOP_INFO.address}</span>
          </li>
          <li class="flex items-center">
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a href={`tel:${SHOP_INFO.phone}`} class="hover:text-white">
              {SHOP_INFO.phone}
            </a>
          </li>
          <li class="flex items-center">
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a href={`mailto:${SHOP_INFO.email}`} class="hover:text-white">
              {SHOP_INFO.email}
            </a>
          </li>
        </ul>
      </div>

      <!-- Opening Hours -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Giờ mở cửa</h4>
        <ul class="space-y-2 text-gray-400">
          <li>
            <span class="font-medium text-white">Thứ 2 - Thứ 6:</span><br />
            {SHOP_INFO.openingHours.weekday}
          </li>
          <li>
            <span class="font-medium text-white">Thứ 7 - Chủ nhật:</span><br />
            {SHOP_INFO.openingHours.weekend}
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
        <p>
          &copy; {currentYear} {SHOP_INFO.name}. Tất cả quyền được bảo lưu.
        </p>
        <p class="mt-2 md:mt-0">
          Thiết kế bởi <span class="text-gradient inline-block">Hidu Team</span>
        </p>
      </div>
    </div>
  </div>
</footer>
