---
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';
import { menuItems } from '../../data/menu';
import { getMenuImageUrl } from '../../utils/imageHelper';

// Get popular and best seller items
const featuredItems = menuItems.filter(
  (item) => item.isPopular || item.isBestSeller || item.isNew
).slice(0, 6);
---

<section class="section-padding bg-beige-light">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-gradient">Thực đơn</span> nổi bật
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Khám phá những món đồ uống được yêu thích nhất tại {
          import.meta.env.SITE_NAME || 'Hidu Drinks'
        }
      </p>
    </div>

    <!-- Menu Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {
        featuredItems.map((item, index) => (
          <div data-aos="fade-up" data-aos-delay={index * 100} class="group">
            <Card>
              <!-- Image -->
              <div class="relative h-64 overflow-hidden rounded-t-2xl bg-gray-100">
                <img
                  src={getMenuImageUrl(item.category, index)}
                  alt={item.name}
                  class="w-full h-full object-cover transition-transform group-hover:scale-110 duration-300"
                  loading="lazy"
                  onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1517487881594-2787fef5ebf7?w=400&h=300&fit=crop'"
                />
                
                {/* Hover overlay */}
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300" />

                {/* Badges */}
                <div class="absolute top-4 left-4 flex flex-col gap-2">
                  {item.isNew && (
                    <span class="bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                      Mới
                    </span>
                  )}
                  {item.isBestSeller && (
                    <span class="bg-yellow-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                      Bán chạy
                    </span>
                  )}
                  {item.isPopular && (
                    <span class="bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                      Phổ biến
                    </span>
                  )}
                </div>
              </div>

              {/* Content */}
              <div class="p-6 flex flex-col flex-1">
                <h3 class="text-xl font-bold mb-2 text-gray-800">
                  {item.name}
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2 min-h-[2.5rem]">
                  {item.description}
                </p>

                <div class="flex items-center justify-between mt-auto">
                  <span class="text-2xl font-bold text-gradient">
                    {item.price.toLocaleString('vi-VN')}đ
                  </span>
                  <button
                    class="px-4 py-2 rounded-full bg-primary-500 text-white hover:bg-primary-600 transition-colors text-sm font-semibold flex-shrink-0"
                    data-item-id={item.id}
                  >
                    Đặt ngay
                  </button>
                </div>
              </div>
            </Card>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="text-center" data-aos="fade-up">
      <Button href="/menu" variant="primary" size="lg">
        Xem toàn bộ thực đơn
      </Button>
    </div>
  </div>
</section>

