---
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';
import { menuItems } from '../../data/menu';

// Get popular and best seller items
const featuredItems = menuItems.filter(
  (item) => item.isPopular || item.isBestSeller || item.isNew
).slice(0, 6);
---

<section class="section-padding bg-gray-50">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="text-gradient">Thực đơn</span> nổi bật
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Khám phá những món đồ uống được yêu thích nhất tại {
          import.meta.env.SITE_NAME || 'Hidu Drinks'
        }
      </p>
    </div>

    <!-- Menu Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {
        featuredItems.map((item, index) => (
          <div data-aos="fade-up" data-aos-delay={index * 100}>
            <Card>
              <!-- Image -->
              <div class="relative h-64 bg-gradient-pastel overflow-hidden">
                {/* Placeholder for menu item image */}
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center p-4">
                    <svg
                      class="w-20 h-20 mx-auto mb-2 text-white opacity-60"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <p class="text-white text-xs">
                      {item.image}
                    </p>
                  </div>
                </div>

                {/* Badges */}
                <div class="absolute top-4 left-4 flex flex-col gap-2">
                  {item.isNew && (
                    <span class="bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                      Mới
                    </span>
                  )}
                  {item.isBestSeller && (
                    <span class="bg-yellow-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                      Bán chạy
                    </span>
                  )}
                  {item.isPopular && (
                    <span class="bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                      Phổ biến
                    </span>
                  )}
                </div>
              </div>

              {/* Content */}
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2 text-gray-800">
                  {item.name}
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  {item.description}
                </p>

                <div class="flex items-center justify-between">
                  <span class="text-2xl font-bold text-gradient">
                    {item.price.toLocaleString('vi-VN')}đ
                  </span>
                  <button
                    class="px-4 py-2 rounded-full bg-primary-500 text-white hover:bg-primary-600 transition-colors text-sm font-semibold"
                    data-item-id={item.id}
                  >
                    Đặt ngay
                  </button>
                </div>
              </div>
            </Card>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="text-center" data-aos="fade-up">
      <Button href="/menu" variant="primary" size="lg">
        Xem toàn bộ thực đơn
      </Button>
    </div>
  </div>
</section>

<script>
  // Add to cart functionality (placeholder)
  document.querySelectorAll('[data-item-id]').forEach((btn) => {
    btn.addEventListener('click', () => {
      const itemId = btn.getAttribute('data-item-id');
      console.log('Add to cart:', itemId);
