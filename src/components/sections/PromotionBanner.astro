---
import Button from '../ui/Button.astro';
import { promotions } from '../../data/menu';

// Get the first promotion for banner
const featuredPromo = promotions[0];
---

{
  featuredPromo && (
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div
          class="gradient-sunset rounded-3xl overflow-hidden shadow-2xl"
          data-aos="zoom-in"
        >
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center p-8 md:p-12">
            {/* Content */}
            <div class="text-white">
              <span class="inline-block bg-white bg-opacity-20 text-white text-sm font-bold px-4 py-2 rounded-full mb-4">
                Ưu đãi đặc biệt
              </span>

              <h2 class="text-4xl md:text-5xl font-bold mb-4">
                {featuredPromo.title}
              </h2>

              <p class="text-xl mb-6 text-white text-opacity-90">
                {featuredPromo.description}
              </p>

              <div class="flex items-center space-x-4 mb-8">
                <div class="text-6xl font-bold">{featuredPromo.discount}</div>
                <div class="text-sm">
                  Áp dụng đến
                  <br />
                  <span class="font-semibold">
                    {featuredPromo.validUntil.toLocaleDateString('vi-VN')}
                  </span>
                </div>
              </div>

              <Button href="/promotions" variant="outline" class="bg-white text-primary-600 hover:bg-gray-100 border-white">
                Xem chi tiết
              </Button>
            </div>

            {/* Image */}
            <div class="relative h-80 lg:h-96">
              <div class="absolute inset-0 bg-white bg-opacity-20 rounded-2xl backdrop-blur-sm flex items-center justify-center">
                <div class="text-center p-6">
                  <svg
                    class="w-24 h-24 mx-auto mb-4 text-white opacity-60"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"
                    />
                  </svg>
                  <p class="text-white text-sm">
                    Thêm hình ảnh khuyến mãi tại
                    <br />
                    <code class="text-xs bg-white bg-opacity-20 px-2 py-1 rounded">
                      {featuredPromo.image}
                    </code>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
